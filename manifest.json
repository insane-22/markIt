{
  "manifest_version": 3,
  "name": "MarkIt",
  "version": "0.0.1",
  "description": "Annotate webpages with highlights and notes.",
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"]
    }
  ],
  "options_page": "options.html",
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "activeTab",
    "storage",
    "contextMenus",
    "tabs",
    "bookmarks",
    "scripting"
  ],
  "host_permissions": ["<all_urls>"],
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "chromeos": "B+Ctrl",
        "linux": "B+Ctrl",
        "mac": "B+Ctrl",
        "windows": "B+Ctrl"
      }
    },
    "highlight": {
      "suggested_key": {
        "chromeos": "Ctrl+Shift+H",
        "mac": "Command+Shift+H",
        "windows": "Ctrl+Shift+H"
      },
      "description": "Highlight selected text"
    },
    "add_note": {
      "suggested_key": {
        "default": "Ctrl+Shift+N",
        "mac": "Command+Shift+N"
      },
      "description": "Add note to highlighted text"
    }
  }
}
